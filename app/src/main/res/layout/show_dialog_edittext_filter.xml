<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp10"
    android:gravity=""
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/teal_900"
        android:orientation="vertical">

        <com.sapl.distributormsdpharma.customView.CustomButtonBold
            android:id="@+id/digHeader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center"
            android:text="@string/app_name" />

    </LinearLayout>

    <com.sapl.distributormsdpharma.customView.CustomEditTextMedium
        android:id="@+id/edt_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:gravity="center_vertical|center"
        android:hint="@string/enter_shopname_filter"
        android:paddingTop="@dimen/dp10" />

    <com.sapl.distributormsdpharma.customView.CustomUnderLine
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/edt_filter"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10" />

    <com.sapl.distributormsdpharma.customView.CustomButtonBold
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="@dimen/dp10"
        android:text="OK" />
</LinearLayout>